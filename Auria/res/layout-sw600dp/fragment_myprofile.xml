<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray_light"
    android:orientation="horizontal"
    android:weightSum="2">

    <fragment
        android:id="@+id/fragment_myprofile_profile"
        android:name="com.ievolutioned.auria.fragment.ProfileFragment"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:tag="Profile" />

    <fragment
        android:id="@+id/fragment_myprofile_password"
        android:name="com.ievolutioned.auria.fragment.PasswordFragment"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:tag="Password" />
</LinearLayout>
