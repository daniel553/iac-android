<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_dining_add_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="10dp"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:weightSum="4">

    <Button
        android:id="@+id/fragment_dining_iac_id_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/ic_iac_id"
        android:text="Manual" />

    <Button
        android:id="@+id/fragment_dining_barcode_normal_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/ic_barcode"
        android:text="Normal" />

    <Button
        android:id="@+id/fragment_dining_barcode_no_support_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/ic_barcode"
        android:text="Sin Subsidio" />

    <Button
        android:id="@+id/fragment_dining_barcode_extra_time_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/ic_barcode"
        android:text="Tiempo extra" />


</LinearLayout>