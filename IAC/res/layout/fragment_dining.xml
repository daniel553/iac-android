<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray_light"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="5dp"
            android:paddingStart="30dp"
            android:paddingTop="30dp"
            android:text="@string/string_fragment_dining_plant_title"
            android:textColor="@android:color/secondary_text_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customswitch_switch_bg_holo_light">

            <TextView
                android:id="@+id/fragment_dining_plants_spinner_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="5dp"
                android:paddingStart="30dp"
                android:text="@string/string_fragment_dining_plant"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/fragment_dining_plants_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="end"
                android:paddingLeft="60dp"
                android:paddingStart="60dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/fragment_dining_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="5dp"
            android:paddingStart="30dp"
            android:paddingTop="30dp"
            android:text="@string/string_fragment_dining_add_title"
            android:textColor="@android:color/secondary_text_light" />

        <RelativeLayout
            android:id="@+id/fragment_dining_add_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customswitch_switch_bg_holo_light">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingEnd="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="5dp"
                android:paddingStart="30dp"
                android:text="@string/string_fragment_dining_add_subtitle"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/fragment_dining_guests_button"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/fragment_dining_iac_id_button"
                android:layout_toStartOf="@+id/fragment_dining_iac_id_button"
                android:drawableRight="@android:drawable/ic_menu_myplaces"
                android:text="Invitados"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/fragment_dining_iac_id_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/fragment_dining_barcode_button"
                android:layout_toStartOf="@+id/fragment_dining_barcode_button"
                android:src="@drawable/ic_iac_id" />

            <ImageButton
                android:id="@+id/fragment_dining_barcode_button"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_barcode" />


        </RelativeLayout>

        <TextView
            android:id="@+id/fragment_dining_attendee_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:text="@string/string_fragment_dining_list_title"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/fragment_dining_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true" />

        <fragment
            android:id="@+id/fragment_dining_guests"
            android:name="com.ievolutioned.iac.fragment.DiningGuestsFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>