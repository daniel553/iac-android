<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray_light"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:text="@string/string_fragment_attendees_courses_title"
        android:textColor="@android:color/secondary_text_light" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingBottom="20dp"
        android:paddingEnd="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:text="@string/string_fragment_attendees_courses" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:text="@string/string_fragment_attendees_personal_data_title"
        android:textColor="@android:color/secondary_text_light" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingBottom="20dp"
        android:paddingEnd="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:text="@string/string_fragment_attendees_personal_data" />

</LinearLayout>