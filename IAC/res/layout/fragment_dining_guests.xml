<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray_light"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:text="@string/string_fragment_dining_guests_hosts_title"
        android:textColor="@android:color/secondary_text_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/customswitch_switch_bg_holo_light">

        <TextView
            android:id="@+id/fragment_dining_guests_host_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="5dp"
            android:paddingStart="30dp"
            android:text="@string/string_fragment_dining_guests_host"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <ImageButton
            android:id="@+id/fragment_dining_guests_host_iac_id_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/fragment_dining_guests_host_barcode_button"
            android:layout_toStartOf="@+id/fragment_dining_guests_host_barcode_button"
            android:src="@drawable/ic_iac_id" />

        <ImageButton
            android:id="@+id/fragment_dining_guests_host_barcode_button"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_barcode" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/fragment_dining_guests_host_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <TextView
            android:id="@+id/fragment_dining_guests_host_iac_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="5dp"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:text="IAC-ID"
            android:textColor="@android:color/secondary_text_light" />

        <TextView
            android:id="@+id/fragment_dining_guests_host_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/fragment_dining_guests_host_iac_id"
            android:layout_toRightOf="@+id/fragment_dining_guests_host_iac_id"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Nombre del invitante"
            android:textColor="@android:color/secondary_text_light" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fragment_dining_guests_host_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/fragment_dining_guests_host_name"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_delete" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_gray" />

    <TextView
        android:id="@+id/fragment_dining_guests_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="5dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:text="@string/string_fragment_dining_guests_add_title"
        android:textColor="@android:color/secondary_text_light" />

    <RelativeLayout
        android:id="@+id/fragment_dining_guests_add_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/customswitch_switch_bg_holo_light">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingEnd="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="5dp"
            android:paddingStart="30dp"
            android:text="@string/string_fragment_dining_guests_add_subtitle"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/fragment_dining_guests_manual_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/fragment_dining_guests_iac_id_button"
            android:layout_toStartOf="@+id/fragment_dining_guests_iac_id_button"
            android:text="@string/string_fragment_dining_guests_new_manual"
            android:textColor="@color/secondary_gray" />

        <ImageButton
            android:id="@+id/fragment_dining_guests_iac_id_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/fragment_dining_guests_barcode_button"
            android:layout_toStartOf="@+id/fragment_dining_guests_barcode_button"
            android:src="@drawable/ic_iac_id" />

        <ImageButton
            android:id="@+id/fragment_dining_guests_barcode_button"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_barcode" />


    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_dining_guests_attendee_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:text="@string/string_fragment_dining_guests_list_title"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/fragment_dining_guests_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true" />


</LinearLayout>